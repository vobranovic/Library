@model BookAuthor
@{
    ViewData["Title"] = "Add Author";
}

<h1>Add New Author</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookId" value="@ViewBag.BookId" />

             <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.Authors"></select>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-success mt-3 mb-3" value="Add" />
            </div>

        </form>
    </div>
</div>



<div>
    <a asp-action="Index" class="btn btn-secondary" asp-route-Id="@ViewBag.BookId">Back to List</a>
</div>



@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
