@model ApplicationUser
@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text text-danger">Delete User</h1>
<hr />

<p class="text text-danger">Are you sure you want to delete this user?</p>

<ul>
    <li>Username: @Model.UserName</li>
</ul>

<h3 class="text text-danger">WARNING: Before deleting a user, make sure there are <b>no borrows</b> related to this user!</h3>

@if (ViewBag.Borrows.Count > 0 && ViewBag.Borrows != null)
{
    <p class="text-warning">This user is still tied to these borrows:</p>
    <ul>
        @foreach (var item in ViewBag.Borrows)
        {
            <li>Borrow ID: @item.Id</li>
        }
    </ul>
}
else
{
    <p class="text-success">No borrows found for this user!</p>
}


<form asp-action="ConfirmDelete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger mt-3 mb-3" />
</form>
<a asp-action="Index" class="btn btn-secondary">Back to User List</a>


