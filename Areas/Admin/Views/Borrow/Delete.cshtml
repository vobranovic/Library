@model Library.Models.Borrow

@{
    ViewData["Title"] = "Delete Borrow";
}

<h3 class="text text-danger">Are you sure you want to delete this borrow?</h3>
<div>
    <h4>Borrow</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateBorrowed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateBorrowed)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpectedReturnDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpectedReturnDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateReturned)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateReturned)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>

    <h3>Currently Borrowed Books</h3>
    <hr />
    @if (ViewBag.Books.Count > 0)
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Books)
                {
                    <tr>
                        <td>@item.BookTitle</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Currently no books are borrowed!</p>
    }
    
    <form asp-action="ConfirmDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Back to List</a> 
        <a asp-action="Edit" class="btn btn-primary" asp-route-Id="@Model.Id">Edit</a>
    </form>
</div>
