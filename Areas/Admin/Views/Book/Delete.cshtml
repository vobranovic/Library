@model Library.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h3 class="text text-danger">Are you sure you want to delete this book?</h3>

<div class="row">
    <div class="col-md-6">
        <b>Authors:<br /></b>
        @foreach (var item in Model.BookAuthor)
        {
            @item.AuthorName
            <br />
        }
    </div>



<div>
    <dl class="col-md-6">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year.Year)
        </dd>
    </dl>
    </div>
</div>
    <form asp-action="ConfirmDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />         
    </form>
    <a asp-action="Index" class="btn btn-secondary">Back to Search</a>

