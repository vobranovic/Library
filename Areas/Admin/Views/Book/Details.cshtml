@model Book
@{
    ViewData["Title"] = "Book Details";
}

<h1>Book Details</h1>

<ul class="list-group">
    <li class="list-group-item"><b>Title:</b> @Model.Title </li>
    <li class="list-group-item"><b>Author:</b> </li>
    <li class="list-group-item"><b>Year:</b> @Model.Year.Year </li>
</ul>
<br />
<h3>Current Borrows</h3>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Date Borrowed</th>
            <th>Expected Return Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Borrows)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.DateBorrowed.ToShortDateString()</td>
                <td>@item.ExpectedReturnDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>